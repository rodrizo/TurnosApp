@model Turnos.Models.Paciente

<h4 class="center">Paciente nuevo</h4>
<hr/>
<div class="row">
    <form asp-action="Create">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                <input asp-for="Nombre" type="text" class="validate">
                <label asp-for="Nombre"></label>
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="input-field col s6">
                <input asp-for="Apellido" class="validate">
                <label asp-for="Apellido"></label>
                <span asp-validation-for="Apellido"></span>
            </div>
        </div>
        <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <input asp-for="Direccion" type="text" class="validate">
            <label asp-for="Direccion"></label>
            <span asp-validation-for="Direccion"></span>
        </div>
        <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <input asp-for="Telefono" type="text" class="validate">
            <label asp-for="Telefono"></label>
            <span asp-validation-for="Telefono"></span>
        </div>
        <div class="input-field col s12">
            <i class="material-icons prefix">account_circle</i>
            <input asp-for="Email" type="text" class="validate">
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="col s12">
            <button class="btn waves-effect waves-light" type="submit" name="action">Registrar
                <i class="material-icons right">send</i>
            </button>
            <a class="waves-effect waves-light btn-small indigo darken-3 right" asp-action="Index"><i
                    class="material-icons left">undo</i>Regresar</a>
        </div>
    </form>
</div>