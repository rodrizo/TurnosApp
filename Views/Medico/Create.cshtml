@model Turnos.Models.Medico


<!DOCTYPE html>

<body>

    <h4>Medico</h4>
    <hr />
    <div class="row">
        <form class="col s12" asp-action="Create">
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <input asp-for="Apellido" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido"></span>

                </div>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">home</i>
                <input asp-for="Direccion" class="validate">
                <label asp-for="Direccion">Direcci√≥n</label>
                <span asp-validation-for="Direccion"></span>

            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">call</i>
                <label asp-for="Telefono"></label>
                <input asp-for="Telefono" class="validate" />
                <span asp-validation-for="Telefono"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">mail</i>
                <label asp-for="Email"></label>
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">insert_invitation</i>
                <label asp-for="HorarioAtencionDesde"></label>
                <input asp-for="HorarioAtencionDesde" type="text" class="timepicker" />
                <span asp-validation-for="HorarioAtencionDesde"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">insert_invitation</i>
                <label asp-for="HorarioAtencionHasta"></label>
                <input asp-for="HorarioAtencionHasta" type="text" class="timepicker" />
                <span asp-validation-for="HorarioAtencionHasta"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">try</i>
                <select name="IdEspecialidad" asp-items="ViewBag.ListaEspecialidades"></select>
            </div>

            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Registrar
                        <i class="material-icons right">send</i>
                    </button>
                </div>
                <div class="col s6 m6">
                    <a class="waves-effect waves-light btn-small indigo darken-3" asp-action="Index"><i class="material-icons left">undo</i>Regresar</a>
                </div>
            </div>
        </form>
    </div>
</body>
